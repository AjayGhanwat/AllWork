<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/setUpPinUser"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@android:color/white"
             android:clickable="true"
             android:focusable="true">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="false">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/sixDigit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/avenir"
            android:text="@string/last_6_digits_of_your_debit_card_number"
            android:textColor="@color/back_access"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/layoutEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sixDigit"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/firstNum"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

            <EditText
                android:id="@+id/secNum"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

            <EditText
                android:id="@+id/thNum"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

            <EditText
                android:id="@+id/fourNum"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

            <EditText
                android:id="@+id/fiveNum"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

            <EditText
                android:id="@+id/sixNum"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="1"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

        </LinearLayout>

        <TextView
            android:id="@+id/validity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutEditText"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:text="@string/validity_of_card"
            android:textAlignment="center"
            android:textColor="@color/back_access"
            android:textSize="18sp"/>

        <LinearLayout
            android:id="@+id/layoutValidText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/validity"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText
                android:id="@+id/valideDate"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:ignore="TextFields"
                tools:targetApi="lollipop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/avenir"
                android:text="@string/_"
                android:textColor="@color/back_access"
                android:textSize="20sp"/>


            <EditText
                android:id="@+id/valideYear"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:backgroundTint="@android:color/black"
                android:inputType="number"
                android:maxLength="2"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:targetApi="lollipop"/>

        </LinearLayout>

        <TextView
            android:id="@+id/setNewPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:drawableEnd="@drawable/ic_chevron_right_white_24dp"
            android:drawableRight="@drawable/ic_chevron_right_white_24dp"
            android:fontFamily="@font/avenir"
            android:gravity="center"
            android:text="@string/next"
            android:textColor="@color/back_access"
            android:textSize="16sp"/>

    </RelativeLayout>
</FrameLayout>